<p id="notice"><%= notice %></p>

<h1>Pedals</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Price</th>
      <th>Description</th>
      <th>Posted by</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pedals.each do |pedal| %>
      <tr>
        <td><%= pedal.title %></td>
        <td><%= pedal.price %></td>
        <td><%= pedal.description %></td>
        <td><%= pedal.user.email %></td>
        <td><%= link_to 'Show', pedal %></td>
        <% if current_user == pedal.user %>
          <td><%= link_to 'Edit', edit_pedal_path(pedal) %></td>
          <td><%= link_to 'Destroy', pedal, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

