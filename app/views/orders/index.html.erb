<p id="notice"><%= notice %></p>

<h1>Orders</h1>

<table>
  <thead>
    <tr>
      <th>Bought/Sold</th>
      <th>Pedal ID</th>
      <th>Address</th>
      <th>Postcode</th>
      <th>City</th>
      <th>State</th>
      <th>Country</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <% if params[:pedal_id].to_i == order.pedal_id || current_user == order.user %>
        <tr>
          <% if current_user == order.user %>
            <td>Bought</td>
          <% else %>
            <td>Sold</td>
          <% end %>
          <td><%= order.pedal_id %></td>
          <td><%= order.address %></td>
          <td><%= order.postcode %></td>
          <td><%= order.city %></td>
          <td><%= order.state %></td>
          <td><%= order.country %></td>
          <td><%= link_to 'Show', order %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Order', new_order_path %>
